#!/bin/sh

export baseDir=$(cd "$(dirname "$(which "$0")")" && pwd)

usage()
{
  echo "usage: $0 <profile> - Sets the wpa_supplicant network profile."
  exit 1
}

if ! [ $# -eq 1 ]; then
  usage
fi

if [ ! -e "$baseDir/../Profiles/$1" ]; then
  echo "Profile '$1' does not exist."
  usage
fi

cmp -s "$baseDir/../Profiles/$1" "$baseDir/../Profiles/default" || ( cp "$baseDir/../Profiles/$1" "$baseDir/../Profiles/default" && sudo systemctl restart wireless 2>&1 | grep -v "you are stopping" | ( grep -v ipv6 || true ) )
